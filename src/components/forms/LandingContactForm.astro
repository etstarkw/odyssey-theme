---
import {Icon} from 'astro-icon/components'
import { Button, FormInput } from '@components/odyssey-theme';

const selectOptions = [
  "Google Search",
  "Social Media",
  "Email",
]

---

<form name="Contact Form" method="POST" action="https://themorningafterretirement.us16.list-manage.com/subscribe/post?u=af668e2836eafed0e5e5c6165&amp;id=c197a83023&amp;f_id=00d1c2e1f0" target="_blank">
  <FormInput type="text" label="First Name" name="FNAME" placeholder="John" />
  <FormInput type="text" label="Last Name" name="LNAME" placeholder="Doe" />
  <FormInput type="email" label="Email Address" name="EMAIL" placeholder="hello@example.com" required />
  <input type="text" name="b_af668e2836eafed0e5e5c6165_c197a83023" tabindex="-1" value="" style="position: absolute; left: -5000px;" />
  <Button customIcon type="submit">Subscribe
    <Fragment slot="icon">
      <Icon name="ic:baseline-chevron-right" />
    </Fragment>
  </Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>