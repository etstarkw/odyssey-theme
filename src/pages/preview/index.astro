---
import { TextSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import { Carousel } from 'webcoreui/astro'; // Import Carousel component
import "webcoreui/styles"; // Import WebCoreUI styles globally

const seo = {
  title: `Preview | The Morning After Retirement`,
  description: `This is a preview of some pages from the graphic novel.`,
};
---

<Layout seo={seo}>
  <TextSection narrow>
    <h1>Preview</h1>
    <p>Here's a sample of what you'll see in <em>The Morning After Retirement</em>.</p>

    <!-- WebCoreUI Carousel -->
    <Carousel items={4}pagination={{ type: null, showChevrons: true }}>
      <li class="slide">
        <img src="/preview-1.jpg" alt="Preview Page 1" style="width: 100%;" />
      </li>
      <li class="slide">
        <img src="/preview-2.jpg" alt="Preview Page 2" style="width: 100%;" />
      </li>
      <li class="slide">
        <img src="/preview-3.jpg" alt="Preview Page 3" style="width: 100%;" />
      </li>
      <li class="slide">
        <img src="/preview-4.jpg" alt="Preview Page 4" style="width: 100%;" />
      </li>
    </Carousel>
  </TextSection>
</Layout>

<style>
  .slide {
    width: 100%;
  }
</style>