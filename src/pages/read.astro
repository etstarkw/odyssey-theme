---
import { TextSection, Container, FeatureCard } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';

const seo = {
  title: `Read | The Morning After Retirement`,
  description: `This is where the pdf of The Morning After Retirement Graphic Novel is available for download as a pdf and to order in print.`,
};

const pdfPath = '/graphic-novel.pdf'; // Path to your PDF in the public folder
const previewImage = '/social.png'; // Path to the preview image in the public folder
---

<Layout seo={seo}>
  <Container>
		<section class="feature-card__section">
			<h2><em>The Morning After Retirement: A Graphic Novel</em></h2>
			<p>
				Available to download as a PDF or to order in print!
			</p>
			<div class="feature-card__grid">
				<FeatureCard href={pdfPath} title="Download PDF" imgSrc="/assets/images/home/cover-official">
				</FeatureCard>
				<FeatureCard href={pdfPath} title="Order a Physical Copy" imgSrc="/assets/images/home/cover-official">
				</FeatureCard>
			</div>
		</section>
	</Container>
  <TextSection narrow>
    <h1>Download "The Morning After Retirement"</h1>

    <p>
      Download the full PDF of the graphic novel to read offline.
    </p>

    <!-- Preview Image -->
    <img 
      src={previewImage} 
      alt="Preview of The Morning After Retirement" 
      style="max-width: 100%; height: auto; margin-bottom: 1.5rem; border: 1px solid #ddd; border-radius: 8px;"
    />

    <!-- Download Link -->
    <a 
      href={pdfPath} 
      download="the-morning-after-retirement.pdf" 
      style="display: inline-block; background-color: #0070f3; color: white; padding: 0.75rem 1.5rem; font-size: 1rem; font-weight: bold; text-decoration: none; border-radius: 8px; text-align: center;"
    >
      Download PDF
    </a>
  </TextSection>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>